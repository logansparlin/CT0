html, body
	width 100%
	height 100% 
	margin 0
	padding 0
	font-family 'futura-pt-condensed', 'arial', sans-serif
	background black
	overflow hidden
	border 5px solid white
	box-sizing border-box
	
.loading-section 
	width 100%
	height 100%
	position relative
	background url('../img/black_gradient.jpg') no-repeat center center 
	background-size cover
	.image-overlay 
		position absolute 
		width 100% 
		height 100%
		top 0
		left 0
		background url('../img/teaser_BTS.jpg') no-repeat center center 
		background-size cover
		z-index 1
		opacity 0.15
	.CT0-title
		z-index 5
		color #fff
		margin 0
		padding 0
		position absolute
		top 40px
		left 50px
		font-size 1.5em
		letter-spacing 0.3em
		text-transform uppercase
		font-weight 100
		transition all 500ms ease-out
	.play-container
		position absolute 
		z-index 5
		top 50%
		left 50%
		transform translate(-50%, -50%)
		text-align center
		.play-button
			z-index 5 
			color white
			margin 0
			padding 0
			font-size 4.5em
			cursor pointer
			transition all 200ms ease-out
		.watch-trailer 
			color white 
			letter-spacing 0.3em
			font-size 1.5em
			font-weight 100 
			text-transform uppercase
			padding 10px 0
			margin 0