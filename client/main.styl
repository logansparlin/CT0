html, body
	width 100%
	height 100% 
	margin 0
	padding 0
	font-family 'futura-pt-condensed', 'arial', sans-serif
	background black
	overflow hidden
	border 5px solid white
	box-sizing border-box
	
*::selection 
	background rgba(100, 100, 100, 0.5)
*::-moz-selection
	background rgba(100, 100, 100, 0.5)
	
.landing-section 
	width 100%
	height 100%
	position relative
	background url('../img/black_gradient.jpg') no-repeat center center 
	background-size cover
	.image-overlay 
		position absolute 
		width 100% 
		height 100%
		top 0
		left 0
		background url('../img/teaser_BTS.jpg') no-repeat center center 
		background-size cover
		z-index 1
		opacity 0.1
	.CT0-title
		z-index 5
		color #fff
		margin 0
		padding 0
		position absolute
		top 40px
		left 50px
		font-size 1.5em
		letter-spacing 0.3em
		text-transform uppercase
		font-weight 100
		transition all 500ms ease-out
	.play-container
		position absolute 
		z-index 5
		top 50%
		left 50%
		transform translate(-50%, -50%)
		text-align center
		user-select none
		.play-button
			z-index 5 
			color white
			margin 0
			padding 0
			font-size 4em
			cursor pointer
			transition all 200ms ease-out
		.watch-trailer 
			color white 
			letter-spacing 0.3em
			font-size 1.5em
			font-weight 100 
			text-transform uppercase
			padding 10px 0
			margin 0
	.social-container 
		position absolute 
		z-index 5 
		bottom 30px 
		right 50px
		color white
		text-align center
		font-size 1.2em
		.social-icon 
			display inline-block
			width 30px 
			height 30px
			margin 0 10px 
			padding 5px
			text-align center
			border 1px solid transparent
			position relative
			border-radius 100%
			cursor pointer
			transition all 200ms ease-out
			a 
				color white
			&:hover 
				border 1px solid white
				transition all 200ms ease-out
			i 
				position absolute 
				top 50%
				left 50%
				transform translate(-50%, -50%)
				
.newsletter-container
	position absolute 
	right 50px 
	top 40px
	font-family 'proxima-nova'
	z-index 5
	h3 
		color white
		text-transform uppercase
		text-align right
		letter-spacing 0.2em
		font-size 0.9em
		clear both
		padding-top 1em
	.newsletter-form 
		float right
	.newsletter-signup, .newsletter-submit 
		border none 
		padding 10px
		margin 0
		display inline
		font-family 'proxima-nova'
		font-weight bold
		letter-spacing 0.05em
		-webkit-appearance none
		border-radius 0
		&:focus 
			border none
			outline none
	.newsletter-signup 
		width 200px
	.newsletter-submit 
		text-transform uppercase
		letter-spacing 0.05em
		margin-left -5px
		background #999
		
.landing-section
	+below(768px)
		.CT0-title 
			width 100%
			text-align center
			left 0
		.newsletter-container
			text-align center 
			bottom 100px
			top auto
			width 100%
			left 0
			.newsletter-form 
				float none
				width 50%
				margin 0 auto
				min-width 300px
			h3 
				text-align center
		.social-container 
			width 75%
			left 50%
			transform translateX(-50%)
		.play-container 
			width 100%
		